{
    "manifest_version": 2,
    "name": "Twitter Sentiment Analysis",
    "version": "1.0",
    "description": "Analyze the sentiment of tweets",
    "permissions": [
      "activeTab",
      "http://localhost:5000/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://twitter.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  